<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="1sp"/>
            <gradient
                android:startColor="#8a959a"
                android:endColor="#8a959a"
                android:angle="360"
                android:type="linear"
                />
            <size
                android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">

        <shape
            android:shape="rectangle">
            <corners android:radius="2sp"/>
            <solid android:color="#fef7ff"/>
        </shape>
    </item>
</layer-list>